{
  "name": "pyre-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "wireit",
    "build:prebundle": "wireit",
    "dev": "wireit",
    "watch": "wireit"
  },
  "wireit": {
    "build": {
      "command": "pyre build",
      "dependencies": [
        "../pyre:build"
      ]
    },
    "build:prebundle": {
      "command": "pyre build --prebundle",
      "dependencies": [
        "../pyre:build"
      ]
    },
    "dev": {
      "command": "concurrently \"pyre watch\" \"web-dev-server --node-resolve --root-dir pyre --watch --open\"",
      "dependencies": [
        "../pyre:build"
      ]
    },
    "watch": {
      "command": "pyre watch",
      "dependencies": [
        "../pyre:build"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^2.7.1",
    "pyre": "file:../pyre"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.38",
    "concurrently": "^8.0.1",
    "eslint-plugin-lit": "^1.8.2"
  }
}
